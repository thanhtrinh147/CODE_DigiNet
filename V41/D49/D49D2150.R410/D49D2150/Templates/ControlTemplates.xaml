            <dxg:GridControl.View>
                <dxg:TableView AutoWidth="True" ShowIndicator="False" ShowVerticalLines="True" ShowHorizontalLines="True"
                               ShowAutoFilterRow="True" ShowFilterPanelMode="Never"/>
