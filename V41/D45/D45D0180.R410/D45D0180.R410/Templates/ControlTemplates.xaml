                <dxg:GridColumn FieldName="AccountID" Header="Mã" Width="80" HorizontalHeaderContentAlignment="Center" AutoFilterCondition="Contains"/>
                <dxg:GridColumn FieldName="AccountName" Header="Tên" Width="110" HorizontalHeaderContentAlignment="Center" AutoFilterCondition="Contains"/>
            </dxg:GridControl.Columns>
            <dxg:GridControl.View>
                <dxg:TableView AutoWidth="True" ShowIndicator="False"  ShowVerticalLines="True" ShowAutoFilterRow="True" ShowFilterPanelMode="Never" ShowHorizontalLines="True"/>
            </dxg:GridControl.View>
        </L3:L3GridControl>
    </ControlTemplate>


